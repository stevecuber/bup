<%= render 'refinery/admin/search_header', :url => refinery.careers_admin_careers_path %>
<% if searching? %>
  <% if @careers.any? %>
    <ul>
      <%= render :partial => 'career', :collection => @careers %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_careers.any? -%>
    <% @grouped_careers.each do |container| %>
      <h3><%= l((career_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'career', :collection => career_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_careers', :scope => 'refinery.careers.admin.careers.index') %></strong>
    </p>
  <% end -%>
<% end %>
